---
import Nav from "../../components/Nav.astro";
import Footer from "../../components/Footer.astro";
import LessonCard from "../../components/LessonCard.astro";
import "../../styles/global.css";

const lecciones = await Astro.glob('../../content/lessons/*.mdx');
---

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lecciones</title>

    <!-- Boostrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

    <!-- Styles -->
    <link rel="stylesheet" href="../src/styles/global.css">
    <link rel="stylesheet" href="../src/styles/lecciones.css">
</head>


<header>

    <div>
    <Nav />
        
    </div>


</header>


<body>

    <main>
        <br>
        <!-- Seccion headers -->
        <section class="mb-5 mt-4">
            <div class="d-flex justify-content-center align-items-center leccion-headers gap-3">
                <h1 id="tittle">
                    <i class="bi bi-bookmarks"></i>
                    Lecciones
                </h1>
            </div>
        </section>

        <!-- Seccion contenido -->
        <section class="container">
            <hr class="pink-hr">

            <div class="container-sm px-5">
                {
                    lecciones.map((leccion, index) => (
                        <LessonCard data={leccion.frontmatter} key={index} />
                    
                    ))
                }

            </div>
        </section>

        <!-- Seccion Referencias y redes -->
        <section>
        </section>
        <br>
    </main>

    <Footer />


</body>

</html>

<style lang="scss">

    @keyframes animatedBackground {
        from {
            background-position: 0 0;
        }
        to {
            background-position: 0 -100%;
        }
    }

    header {
        background: linear-gradient( 90deg, rgba(111, 3, 244, 0.1), rgba(204, 57, 164, 0.1), rgba(213, 61, 255, 0.1));
        
        div {
            background-image: url('../assets/my-background.png');
        background-repeat: repeat-y;
        animation: animatedBackground 20s linear infinite;
        }
    }
</style>